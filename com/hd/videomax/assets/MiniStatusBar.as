et Functions --- //		public function getHeight():Number {			return 6;		}		public function setWidth(pSize_num:Number):void {			sizer.width = pSize_num;		}								// --- Private: Initialization Functions --- //		private function init():void {			statusBar = new Sprite();			createSizer();			createLoadBar();			createProgressBar();			createScrubber();			addChild(statusBar);		}								// --- Private: Creation Functions --- //		private function createSizer():void {			sizer = new Sprite();			sizer.graphics.beginFill(0x000000, 1);			sizer.graphics.drawRect(0, 0, 18, 6);			sizer.graphics.endFill();			sizer.alpha = 0.35;			statusBar.addChild(sizer);			sizer.x = 0;			sizer.y = 0;		}		private function createLoadBar():void {			loadBar = new Sprite();			lbMatr.createGradientBox(18, 6, Math.PI/2, 0, 0);			loadBar.graphics.beginGradientFill(lbFillType, lbColors, lbAlphas, lbRatios, lbMatr, lbSpread);			loadBar.graphics.drawRect(0, 0, 18, 6);			loadBar.graphics.endFill();			statusBar.addChild(loadBar);			loadBar.x = 0;			loadBar.y = 0;		}		private function createProgressBar():void {			progressBar = new Sprite();			pbMatr.createGradientBox(1, 6, Math.PI/2, 0, 0);			progressBar.graphics.beginGradientFill(pbFillType, pbColors, pbAlphas, pbRatios, pbMatr, pbSpread);			progressBar.graphics.drawRect(0, 0, 1, 6);			progressBar.graphics.endFill();			progressBar.alpha = 0.65;			statusBar.addChild(progressBar);			progressBar.x = 0;			progressBar.y = 0;		}		private function createScrubber():void {			scrubber = new Sprite();			var icon:Sprite = new Sprite();			var hit:Sprite = new Sprite();						icon.graphics.beginFill(0x000000, 1);			icon.graphics.drawRect(0, 0, 1, 6);			icon.graphics.endFill();			icon.alpha = 0.2;						scrubber.addChild(icon);			icon.x = 0;			icon.y = 6;						statusBar.addChild(scrubber);		}			}	}