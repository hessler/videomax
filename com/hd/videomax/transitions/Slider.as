						// Y Positioning			if (Math.abs(dy_num) <= 1) {				target.y = targetY_num;				progress_arr[1] = true;			} else {				var vy_num:Number = dy_num * ease_num;				target.y += vy_num;			}						for (var i=0; i<progress_arr.length; i++) {				if (progress_arr[i] == false) {					allDone_bol = false;				}			}			if (allDone_bol) {				removeEventListener(Event.ENTER_FRAME, onEnterFrame);			}		}			}	}